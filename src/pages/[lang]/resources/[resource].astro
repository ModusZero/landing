---
import MainLayout from '@/layouts/MainLayout.astro';
import Giscus from '@/components/resources/Giscus.astro';
import { getGitHubContent } from "@/utils/github";
import { Markdown } from '@astropub/md';
import { getLangFromUrl, useTranslations } from '@/i18n/utils';

export async function getStaticPaths() {
  const languages = ['en', 'es'];
  const resources = ['blog', 'releases', 'collaborate', 'docs', 'first-steps', 'forum'];
  
  return languages.flatMap((lang) => 
    resources.map((resource) => ({ params: { lang, resource } }))
  );
}

const { resource } = Astro.params;
const content = resource !== 'forum' ? await getGitHubContent(resource) : '';
const displayTitle = resource.replace(/-/g, ' ').toUpperCase();

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<MainLayout>
  <section class="relative min-h-screen pt-32 pb-20 px-6 overflow-x-hidden bg-app">
    <div class="max-w-4xl mx-auto">
      {resource === 'forum' ? (
        <div class="animate-in fade-in duration-700">
          <header class="mb-12">
            <h1 class="text-4xl font-bold text-black dark:text-white mb-4 tracking-tight">
              {t('layout.header.resource_list.forum')}
            </h1>
            <p class="text-slate-400 border-l-2 border-emerald-800 dark:border-emerald-300 pl-4 italic">
              {t('layout.header.resource_list.forum_description')}
            </p>
          </header>
          <Giscus />
        </div>
      ) : (
        <div class="animate-in slide-in-from-bottom-4 duration-700">
          <header class="mb-12 border-b border-white/5 pb-8 flex justify-between items-end">
             <div>
               <h1 class="text-4xl font-bold text-black dark:text-white mb-2 tracking-tighter">{displayTitle}</h1>
               <p class="text-xs font-mono text-emerald-800 dark:text-emerald-300 uppercase tracking-widest">
                  {/* TODO: Internacionalizar textos en [resource].astro */}
                  Protocol: GitHub Sourced Content
               </p>
             </div>
             {resource === 'releases' && (
               <span class="text-[10px] bg-emerald-500/10 text-emerald-500 border border-emerald-500/20 px-2 py-1 rounded mb-2 animate-pulse">
                 LIVE UPDATES ACTIVE
               </span>
             )}
          </header>

          <article class="prose prose-invert prose-emerald max-w-none 
            prose-headings:font-bold prose-a:text-emerald-400 
            prose-code:text-emerald-300 prose-pre:bg-black/40 
            prose-pre:border prose-pre:border-white/10 prose-pre:backdrop-blur-sm
            prose-img:rounded-xl">
            
            <Markdown of={content || ''} />
          </article>
        </div>
      )}
    </div>
  </section>
</MainLayout>

<style is:global>
  /* --- Estilos de Markdown --- */
  .prose pre {
    border-radius: 12px;
    padding: 1.5rem;
    box-shadow: 0 10px 30px -10px rgba(0,0,0,0.5);
  }
  .prose h2 {
    border-bottom: 1px solid rgba(255,255,255,0.05);
    padding-bottom: 0.5rem;
    margin-top: 3.5rem;
    color: #fff;
    letter-spacing: -0.025em;
  }
  .prose code:not(pre code) {
    background: rgba(16, 185, 129, 0.1);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-size: 0.9em;
  }

  :global(html) {
    scroll-behavior: smooth;
  }

  :global(.prose) {
    color: var(--text-main) !important;
    --tw-prose-body: var(--text-main);
    --tw-prose-headings: var(--text-main);
    --tw-prose-links: var(--color-accent);
    --tw-prose-bold: var(--text-main);
    --tw-prose-counters: var(--color-accent) !important;
    --tw-prose-bullets: var(--color-accent) !important;
    font-size: 0.95rem;
  }

  :global(.prose ol > li), :global(.prose ul > li) {
    display: list-item !important;
    padding-left: 0.5rem;
  }

  :global(.prose ol > li::marker) {
    color: var(--color-accent) !important;
    font-weight: 700;
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
  }

  :global(.prose ul > li::marker) {
    color: var(--color-accent) !important;
  }

  :global(.prose h2) {
    scroll-margin-top: 7rem;
    border-left: 2px solid var(--color-accent, #5227ff);
    padding-left: 1rem;
    margin-top: 3rem !important;
    margin-bottom: 1.5rem !important;
    font-size: 1.5rem !important;
    font-weight: 800 !important;
    letter-spacing: -0.025em !important;
    text-transform: uppercase;
  }

  :global(.prose h3) {
    scroll-margin-top: 7rem;
    margin-top: 2rem !important;
    color: var(--text-main) !important;
    font-weight: 700 !important;
  }

  :global(.prose a) {
    transition: opacity 0.2s ease;
  }
  
  :global(.prose a:hover) {
    opacity: 0.8;
    text-decoration: underline;
  }

  :global(.prose ol), :global(.prose ul) {
    list-style:circle;
    margin-left: 1.25rem;
  }

  /* --- Botones de Descarga Automáticos --- */
  .prose a[href*="releases/download/"] {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(to bottom right, rgba(16, 185, 129, 0.2), rgba(16, 185, 129, 0.05));
    color: #10b981 !important;
    border: 1px solid rgba(16, 185, 129, 0.3);
    padding: 1rem 1.5rem;
    border-radius: 12px;
    text-decoration: none !important;
    font-family: ui-monospace, monospace;
    font-weight: 700;
    font-size: 0.9rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    margin: 1rem 0;
    width: 100%;
    max-width: 500px;
  }

  .prose a[href*="releases/download/"]:hover {
    background: #10b981;
    color: #000 !important;
    box-shadow: 0 0 30px rgba(16, 185, 129, 0.4);
    transform: translateY(-2px);
  }

  .prose a[href*="releases/download/"]::before {
    content: "↓";
    margin-right: 12px;
    font-size: 1.2rem;
  }
</style>
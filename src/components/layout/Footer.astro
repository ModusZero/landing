---
import { SITE_CONFIG } from '@/config/site';
import { Icon } from 'astro-icon/components';
import { iconMap } from '@/utils/icon-map';
import { getI18nPath, getLangFromUrl, useTranslations } from '@/i18n/utils';
import { RESOURCES_MENU } from '@/config/resources';
import { SOCIAL_LINKS } from '@/config/social-links';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const base = import.meta.env.BASE_URL;

const footerConfig = {
    tagline: t('layout.footer.tagline'),
    columns: [
        {
            title: 'product',
            elements: RESOURCES_MENU.map(item => ({ 
                name: t(item.title), 
                href: getI18nPath(base, lang, `resources/${item.href}`) 
            })),
        },
        {
            title: 'company',
            elements: [
                { name: t('layout.header.about_us'), href: getI18nPath(base, lang, 'about-us') },
                { name: t('contact.cta'), href: getI18nPath(base, lang, 'contact') },
            ],
        },
        {
            title: 'legal',
            elements: [
              { name: t('legal.privacy'), href: getI18nPath(base, lang, 'legal/privacy') },
              { name: t('legal.terms'), href: getI18nPath(base, lang, 'legal/terms') },
              { name: t('legal.cookies.title'), href: getI18nPath(base, lang, 'legal/cookies') },
              { name: t('legal.cookies.consent'), id: 'open-cookies-trigger' },
            ],
        },
    ],
    social: SOCIAL_LINKS,
  copyright: t('layout.footer.copyright'),
}
---

<footer 
  class="border-t backdrop-blur-md transition-colors duration-500 px-4 py-16 sm:px-6 lg:px-8"
  style="background-color: var(--bg-app); border-color: var(--border-main); color: var(--text-main);"
>
  <div class="mx-auto max-w-7xl">
    <div class="mb-12 grid grid-cols-1 gap-12 md:grid-cols-4">
      <div class="md:col-span-1">
        <div class="mb-4 text-2xl font-bold transition-colors">
          {t(SITE_CONFIG.title)}
        </div>
        <p class="text-sm opacity-80 transition-colors">
          {footerConfig.tagline}
        </p>
      </div>

      {
        footerConfig.columns.map((column) => (
          <div>
            <h4 class="mb-4 font-semibold transition-colors">
              {t(`layout.footer.columns.${column.title.toLowerCase()}`)}
            </h4>
            <ul class="space-y-3 text-sm">
              {column.elements.map((element) => (
                <li>
                  {element.id ? (
                    <button 
                      id={element.id}
                      class="cursor-target opacity-70 transition-all hover:opacity-100 hover:text-emerald-500 text-left"
                      style="color: inherit;"
                    >
                      {element.name}
                    </button>
                  ) : (
                    <a 
                      href={element.href} 
                      class="cursor-target opacity-70 transition-all hover:opacity-100 hover:text-emerald-500"
                      style="color: inherit;"
                    >
                      {element.name}
                    </a>
                  )}
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>

    <div 
      class="flex flex-col items-center justify-between border-t pt-8 md:flex-row transition-colors"
      style="border-color: var(--border-main);"
    >
      <p class="mb-4 text-sm opacity-60 md:mb-0 transition-colors">
        &copy; {new Date().getFullYear()} {t(SITE_CONFIG.name)}. {footerConfig.copyright}
      </p>

      <div class="flex space-x-6">
        {
          footerConfig.social.map((social) => (
            <a
              href={social.href}
              target="_blank"
              aria-label={social.name}
              class="cursor-target transition-all hover:scale-110 hover:text-emerald-500"
              style="color: inherit;"
            >
              <Icon name={iconMap[social.icon]} class="h-6 w-6" />
            </a>
          ))
        }
      </div>
    </div>
  </div>
</footer>

<script is:inline>
  function setupCookieTrigger() {
    const trigger = document.getElementById('open-cookies-trigger');
    trigger?.addEventListener('click', () => {
      window.dispatchEvent(new Event('open-cookie-banner'));
    });
  }

  setupCookieTrigger();
  document.addEventListener('astro:page-load', setupCookieTrigger);
</script>
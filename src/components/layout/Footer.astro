---
import { SITE_CONFIG } from '@/config/site';
import { Icon } from 'astro-icon/components';
import { iconMap } from '@/utils/icon-map';
import { getLangFromUrl, useTranslations } from '@/i18n/utils';
import type { IconName } from '@/types/icon-name';

const footerConfig = {
    tagline: 'layout.footer.tagline',
    columns: [
        {
            title: 'Product',
            links: [
                { name: 'Features', href: '#features' },
                { name: 'Pricing', href: '#pricing' },
                { name: 'Integrations', href: '#' },
                { name: 'API Docs', href: '#' },
                { name: 'Changelog', href: '#' },
            ],
        },
        {
            title: 'Company',
            links: [
                { name: 'About Us', href: '#' },
                { name: 'Blog', href: '#' },
                { name: 'Careers', href: '#' },
                { name: 'Press Kit', href: '#' },
                { name: 'Contact', href: '/contact' },
            ],
        },
        {
            title: 'Legal',
            links: [
                { name: 'Privacy Policy', href: '#' },
                { name: 'Terms of Service', href: '#' },
                { name: 'Cookie Policy', href: '#' },
                { name: 'Security', href: '#' },
                { name: 'Compliance', href: '#' },
            ],
        },
    ],
    social: [
        { name: 'Twitter', href: '#', icon: 'twitter' },
        { name: 'GitHub', href: '#', icon: 'github' },
        { name: 'Dribbble', href: '#', icon: 'dribbble' },
        { name: 'LinkedIn', href: '#', icon: 'linkedin' },
    ] as {
        name: string;
        href: string;
        icon: IconName;
    }[],
    copyright: 'layout.footer.copyright',
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer 
  class="border-t backdrop-blur-md transition-colors duration-500 px-4 py-16 sm:px-6 lg:px-8"
  style="background-color: var(--bg-app); border-color: var(--border-main); color: var(--text-main);"
>
  <div class="mx-auto max-w-7xl">
    <div class="mb-12 grid grid-cols-1 gap-12 md:grid-cols-4">
      <div class="md:col-span-1">
        <div class="mb-4 text-2xl font-bold transition-colors">
          {t(SITE_CONFIG.title)}
        </div>
        <p class="text-sm opacity-80 transition-colors">
          {t(footerConfig.tagline)}
        </p>
      </div>

      {
        footerConfig.columns.map((column) => (
          <div>
            <h4 class="mb-4 font-semibold transition-colors">
              {t(`layout.footer.columns.${column.title.toLowerCase()}`)}
            </h4>
            <ul class="space-y-3 text-sm">
              {column.links.map((link) => (
                <li>
                  <a 
                    href={link.href} 
                    class="opacity-70 transition-all hover:opacity-100 hover:text-emerald-500"
                    style="color: inherit;"
                  >
                    {link.name}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>

    <div 
      class="flex flex-col items-center justify-between border-t pt-8 md:flex-row transition-colors"
      style="border-color: var(--border-main);"
    >
      <p class="mb-4 text-sm opacity-60 md:mb-0 transition-colors">
        &copy; {new Date().getFullYear()} {t(SITE_CONFIG.name)}. {t(footerConfig.copyright)}
      </p>

      <div class="flex space-x-6">
        {
          footerConfig.social.map((social) => (
            <a
              href={social.href}
              class="transition-all hover:scale-110 hover:text-emerald-500"
              style="color: inherit;"
              aria-label={social.name}
            >
              <Icon name={iconMap[social.icon]} class="h-6 w-6" />
            </a>
          ))
        }
      </div>
    </div>
  </div>
</footer>
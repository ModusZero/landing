<div id="vanta-bg" class="vanta-container"></div>

<style>
  .vanta-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    z-index: -1;
    pointer-events: none;
    transition: filter 0.7s cubic-bezier(0.4, 0, 0.2, 1);
    will-change: filter;
  }

  :global(.is-scrolled) .vanta-container {
    filter: blur(12px) brightness(0.8);
  }

  :global(.dark.is-scrolled) .vanta-container {
    filter: blur(15px) brightness(0.4);
  }
</style>

<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r134/three.min.js"></script>
<script is:inline src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.rings.min.js"></script>

<script is:inline>
  let vantaEffect = null;

  function initVanta() {
    const isDark = document.documentElement.classList.contains('dark');
    
    if (vantaEffect) vantaEffect.destroy();

    vantaEffect = VANTA.RINGS({
      el: "#vanta-bg",
      mouseControls: true,
      touchControls: true,
      gyroControls: false,
      minHeight: 200.00,
      minWidth: 200.00,
      scale: 1.00,
      scaleMobile: 1.00,
      backgroundColor: isDark ? 0x050505 : 0xffffff,
      color: isDark ? 0x5227ff : 0x73c0fc,
      backgroundAlpha: 1.0
    });
  }

  function handleScroll() {
    const scrollThreshold = 60;
    if (window.scrollY > scrollThreshold) {
      document.body.classList.add('is-scrolled');
    } else {
      document.body.classList.remove('is-scrolled');
    }
  }

  // InicializaciÃ³n y eventos
  initVanta();
  window.addEventListener('scroll', handleScroll, { passive: true });
  window.addEventListener('theme-changed', initVanta);
  
  document.addEventListener('astro:page-load', () => {
    initVanta();
    handleScroll();
  });

  document.addEventListener('astro:before-preparation', () => {
    if (vantaEffect) vantaEffect.destroy();
  });
</script>
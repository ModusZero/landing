<div id="vanta-bg" class="vanta-container"></div>

<style>
  .vanta-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    z-index: -1;
    pointer-events: none;
    transition: filter 0.7s cubic-bezier(0.4, 0, 0.2, 1);
    will-change: filter;
    background-color: transparent;
  }

  :global(.is-scrolled) .vanta-container {
    filter: blur(12px) brightness(0.8);
  }

  :global(.dark.is-scrolled) .vanta-container {
    filter: blur(15px) brightness(0.4);
  }
</style>

<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r121/three.min.js"></script>
<script is:inline src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.rings.min.js"></script>

<script is:inline>
  window.vantaInstance = window.vantaInstance || null;
  window.vantaObserver = window.vantaObserver || null;

  function initVanta() {
    const el = document.getElementById("vanta-bg");
    if (!el) return;

    if (window.vantaInstance) {
      window.vantaInstance.destroy();
    }

    const isDark = document.documentElement.classList.contains('dark');
    
    try {
      window.vantaInstance = VANTA.RINGS({
        el: "#vanta-bg",
        mouseControls: true,
        touchControls: true,
        gyroControls: false,
        minHeight: 200.00,
        minWidth: 200.00,
        scale: 1.00,
        scaleMobile: 1.00,
        backgroundColor: isDark ? 0x050505 : 0xffffff,
        color: isDark ? 0x5227ff : 0x73c0fc,
        backgroundAlpha: 1.0
      });
    } catch (err) {
      console.warn("Vanta.js falló al inicializar. Probablemente Three.js no esté listo.");
    }
  }

  function handleScroll() {
    const scrollThreshold = 60;
    if (window.scrollY > scrollThreshold) {
      document.body.classList.add('is-scrolled');
    } else {
      document.body.classList.remove('is-scrolled');
    }
  }

  function setup() {
    initVanta();
    handleScroll();

    if (!window.vantaSetupDone) {
      window.addEventListener('scroll', handleScroll, { passive: true });

      window.vantaObserver = new MutationObserver((mutations) => {
        mutations.forEach((m) => {
          if (m.attributeName === 'class') {
            initVanta();
          }
        });
      });

      window.vantaObserver.observe(document.documentElement, { attributes: true });
      window.vantaSetupDone = true;
    }
  }

  setup();

  document.addEventListener('astro:page-load', setup);

  document.addEventListener('astro:before-preparation', () => {
    if (window.vantaInstance) {
      window.vantaInstance.destroy();
    }
  });
</script>
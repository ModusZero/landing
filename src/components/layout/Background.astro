<div id="vanta-bg" class="vanta-container"></div>

<style>
  .vanta-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    z-index: -1;
    pointer-events: none;
  }
</style>

<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r134/three.min.js"></script>
<script is:inline src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.rings.min.js"></script>

<script is:inline>
  let vantaEffect = null;

  function initVanta() {
    const isDark = document.documentElement.classList.contains('dark');
    
    // Si ya existe un efecto, lo destruimos antes de recrearlo
    if (vantaEffect) vantaEffect.destroy();

    // @ts-ignore
    vantaEffect = VANTA.RINGS({
      el: "#vanta-bg",
      mouseControls: true,
      touchControls: true,
      gyroControls: false,
      minHeight: 200.00,
      minWidth: 200.00,
      scale: 1.00,
      scaleMobile: 1.00,
      // Colores adaptables
      backgroundColor: isDark ? 0x050505 : 0xffffff,
      color: isDark ? 0x5227ff : 0x73c0fc,
    });
  }

  // Inicializar
  initVanta();

  // Escuchar cambios de tema (el evento que configuramos en tu ThemeSwitch)
  window.addEventListener('theme-changed', initVanta);

  // Reinicializar en cambios de página de Astro (View Transitions)
  document.addEventListener('astro:page-load', initVanta);

  // Limpieza al salir de la página
  document.addEventListener('astro:before-preparation', () => {
    if (vantaEffect) vantaEffect.destroy();
  });
</script>
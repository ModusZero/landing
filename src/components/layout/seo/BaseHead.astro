---
import { SEO } from "astro-seo";
import { Schema } from "astro-seo-schema";
import { SITE_CONFIG } from '@/config/site';
import { getLangFromUrl, useTranslations } from '@/i18n/utils';
import '@/styles/global.css';

interface Props {
    title?: string;
    description?: string;
    image?: string;
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const metaTitle = Astro.props.title || t(SITE_CONFIG.title);
const metaDescription = Astro.props.description || t(SITE_CONFIG.description);

// 1. URL base del sitio (Asegúrate de que coincida con tu config de Astro)
const siteOrigin = "https://moduszero.github.io";
const basePrefix = "/landing"; // Tu subdirectorio en GitHub Pages

// 2. Imagen: Forzamos URL absoluta manual para evitar fallos de new URL
const imagePath = Astro.props.image || '/screenshot.jpeg';
const cleanImagePath = imagePath.startsWith('/') ? imagePath : `/${imagePath}`;
const socialImageURL = `${siteOrigin}${basePrefix}${cleanImagePath}`;

// 3. URL Canónica perfecta
const canonicalURL = new URL(Astro.url.pathname, siteOrigin).toString();

const languages = ['en', 'es'];
const languageAlternates = languages.map((l) => ({
    hrefLang: l,
    href: `${siteOrigin}${basePrefix}/${l}${Astro.url.pathname.replace(basePrefix, '').replace(/^\/(en|es)/, '')}`
}));
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href={`${basePrefix}/favicon.svg`} />
<meta name="generator" content={Astro.generator} />

<SEO
    title={metaTitle}
    description={metaDescription}
    canonical={canonicalURL}
    openGraph={{
        basic: {
            title: metaTitle,
            type: "website",
            image: socialImageURL, // EXPLICITO AQUÍ
            url: canonicalURL,
        },
        optional: {
            description: metaDescription,
            siteName: "Modus Zero",
        },
        image: {
            alt: metaTitle,
            width: 1200,
            height: 630,
            type: "image/jpeg", // Asegúrate que sea .jpeg o .png según tu archivo
        }
    }}
    twitter={{
        card: "summary_large_image",
        title: metaTitle,
        description: metaDescription,
        image: socialImageURL,
    }}
    extend={{
        meta: [
            { property: "og:image", content: socialImageURL },
            { property: "og:image:width", content: "1200" },
            { property: "og:image:height", content: "630" },
            { name: "keywords", content: SITE_CONFIG.keywords.join(', ') },
        ],
    }}
/>

<Schema
    item={{
        "@context": "https://schema.org",
        "@type": "SoftwareApplication",
        "name": "Modus Zero",
        "description": metaDescription,
        "url": canonicalURL,
    }}
/>

<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link href="https://fonts.googleapis.com/css2?family=Geist:wght@100..900&display=swap" rel="stylesheet" />

<script is:inline>
    (function() {
        const getTheme = () => {
            const saved = localStorage.getItem('theme');
            if (saved) return saved;
            return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
        };
        const theme = getTheme();
        document.documentElement.classList.toggle('dark', theme === 'dark');
        document.documentElement.style.colorScheme = theme;
    })();
</script>
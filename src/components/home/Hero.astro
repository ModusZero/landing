---
import { LAYOUT_CONFIG } from "@/config/layout"
---

<section class="relative px-4 pt-32 pb-20 sm:px-6 lg:px-8 bg-transparent">
  <div class="bg-[--text-main] absolute top-32 left-0 h-32 w-1 opacity-20"></div>
  <div class="bg-[--text-main] absolute top-32 right-0 h-32 w-1 opacity-20"></div>

  <div class="mx-auto max-w-7xl">
    <div class="mx-auto max-w-4xl text-center">
      <h1
        class="text-mono-black dark:text-mono-white scroll-fade-up mb-6 text-5xl leading-tight font-extrabold sm:text-6xl lg:text-7xl transition-colors duration-500"
      >
        {LAYOUT_CONFIG.hero.headline}<br />
        <span class="text-mono-gray dark:text-mono-light">{LAYOUT_CONFIG.hero.subheadline}</span>
      </h1>
      
      <p
        class="text-mono-dark dark:text-mono-gray scroll-fade-up mb-10 text-xl leading-relaxed sm:text-2xl transition-colors duration-500"
      >
        {LAYOUT_CONFIG.hero.description}
      </p>

      <div class="scroll-fade-up mb-16 flex flex-col justify-center gap-4 sm:flex-row">
        <a
          href={LAYOUT_CONFIG.hero.cta.primary.href}
          class="bg-mono-black dark:bg-mono-white rounded-lg px-8 py-4 font-semibold text-white dark:text-mono-black shadow-lg transition-all hover:scale-105"
        >
          {LAYOUT_CONFIG.hero.cta.primary.text}
        </a>
        
        <a
          href={LAYOUT_CONFIG.hero.cta.secondary.href}
          class="border-mono-black dark:border-mono-white text-mono-black dark:text-mono-white rounded-lg border-2 bg-transparent px-8 py-4 font-semibold transition-all hover:bg-mono-black/5 dark:hover:bg-white/5"
        >
          {LAYOUT_CONFIG.hero.cta.secondary.text}
        </a>
      </div>

      <div
        class="border-mono-lighter dark:border-mono-dark mx-auto grid max-w-3xl grid-cols-3 gap-8 border-t pt-20 transition-colors duration-500"
      >
        {
          LAYOUT_CONFIG.hero.stats.map((stat, index) => (
            <div class={`float scroll-fade-up stagger-${index + 1}`}>
              <div class="text-mono-black dark:text-mono-white mb-2 text-4xl font-bold transition-colors">
                {stat.value}
              </div>
              <div class="text-mono-gray dark:text-mono-light text-sm tracking-wide uppercase transition-colors">
                {stat.label}
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
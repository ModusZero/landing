---
import { getLangFromUrl, useTranslations } from '@/i18n/utils';

const heroConfig = {
    headline: 'home.hero.headline',
    subheadline: 'home.hero.subheadline',
    description: 'home.hero.description',
    cta: {
        primary: {
            text: 'home.cta.primary_cta',
            href: '#contact',
        },
        secondary: {
            text: 'home.cta.secondary_cta',
            href: '#how-it-works',
        },
    },
    stats: [
        { value: '< 50ms', label: 'home.hero.stats.latency' },
        { value: 'âˆž', label: 'home.hero.stats.scaling' },
        { value: '24/7', label: 'home.hero.stats.autonomy' },
        { value: 'Zero', label: 'home.hero.stats.overhead' },
    ],
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="relative px-4 pt-32 pb-20 sm:px-6 lg:px-8 bg-transparent min-h-[90vh] flex flex-col items-center overflow-hidden">
  
  <div class="mx-auto max-w-7xl relative w-full flex flex-col items-center">
    
    <div class="text-center mb-12 relative z-20 w-full">
      <h1 class="text-mono-black dark:text-mono-white scroll-fade-up text-5xl leading-tight font-extrabold sm:text-6xl lg:text-8xl tracking-tighter drop-shadow-sm transition-all duration-500 [text-shadow:0_2px_20px_rgb(255_255_255/40%)] dark:[text-shadow:0_2px_30px_rgb(0_0_0/80%)]">
        {t(heroConfig.headline)}
      </h1>
    </div>

    <div class="grid lg:grid-cols-2 gap-8 items-center w-full max-w-6xl">
      
      <div class="text-center lg:text-right relative z-10 flex flex-col items-center lg:items-end">
        <span class="text-accent text-4xl sm:text-5xl lg:text-6xl font-bold mb-6 inline-block transition-all duration-500 hover:scale-110 hover:-translate-x-2.5 cursor-default drop-shadow-[0_2px_10px_rgba(82,39,255,0.2)]">
           {t(heroConfig.subheadline)}
        </span>
        
        <p class="text-mono-dark dark:text-mono-gray scroll-fade-up mb-8 text-lg leading-relaxed sm:text-xl font-medium transition-colors duration-500 max-w-md bg-white/5 dark:bg-black/5 backdrop-blur-[2px] rounded-lg p-2">
          {t(heroConfig.description)}
        </p>

        <div class="scroll-fade-up mb-12 flex flex-col gap-4 sm:flex-row lg:justify-end">
          <a href={heroConfig.cta.primary.href}
             class="bg-accent text-white px-8 py-3 rounded-xl font-bold shadow-[0_10px_30px_rgba(82,39,255,0.4)] hover:-translate-y-1 transition-all duration-300">
            {t(heroConfig.cta.primary.text)}
          </a>
          <a href={heroConfig.cta.secondary.href}
             class="backdrop-blur-md border border-mono-black/20 dark:border-mono-white/30 text-mono-black dark:text-mono-white px-8 py-3 rounded-xl font-bold hover:bg-accent/10 transition-all duration-300 shadow-lg">
            {t(heroConfig.cta.secondary.text)}
          </a>
        </div>
      </div>

      <div class="hero-cero-container relative flex justify-center lg:justify-start opacity-0 translate-x-12 transition-all duration-1000 ease-out">
          <div class="relative w-56 h-72 md:w-64 md:h-80 border-14 border-accent dark:border-white rounded-[100px] shadow-[0_0_80px_rgba(82,39,255,0.3)] flex items-center justify-center overflow-hidden bg-white/10 dark:bg-black/40 backdrop-blur-md">
            
            <div class="absolute inset-4 grid grid-cols-4 grid-rows-6 gap-2 opacity-30">
              {Array.from({ length: 24 }).map(() => (
                <div class="bg-accent/60 rounded-sm animate-pulse" style={`animation-delay: ${Math.random() * 2}s`}></div>
              ))}
            </div>

            <div class="absolute w-full h-[3px] bg-accent shadow-[0_0_20px_#5227ff] z-20 animate-[scan_3s_ease-in-out_infinite]"></div>

            <div class="relative z-10 w-12 h-12 bg-accent rounded-xl rotate-45 flex items-center justify-center shadow-[0_0_40px_rgba(82,39,255,0.6)]">
              <div class="w-full h-full border border-white/50 rounded-xl animate-ping opacity-40"></div>
            </div>
          </div>

          <div class="absolute w-full h-full bg-accent/20 blur-[120px] rounded-full -z-10"></div>
      </div>
    </div>

    <div class="border-mono-black/20 dark:border-mono-white/20 flex justify-center gap-12 border-t mt-12 pt-8 w-full max-w-4xl transition-colors duration-500 backdrop-blur-[1px]">
      {
        heroConfig.stats.map((stat, index) => (
          <div class={`scroll-fade-up text-center stagger-${index + 1}`}>
            <div class="text-mono-black dark:text-mono-white text-3xl font-black drop-shadow-md">{stat.value}</div>
            <div class="text-mono-gray dark:text-mono-light text-[10px] font-bold tracking-widest uppercase opacity-80">{t(stat.label)}</div>
          </div>
        ))
      }
    </div>

  </div>
</section>

<style>
  :global(.is-scrolled) .hero-cero-container {
    opacity: 1;
    transform: translateX(0);
  }

  /* Mejora de legibilidad por software: contraste adaptativo */
  h1, span, p {
    isolation: isolate;
  }

  @keyframes scan {
    0%, 100% { top: 5%; opacity: 0.3; }
    50% { top: 95%; opacity: 1; }
  }

  @media (max-width: 1024px) {
    .hero-cero-container {
      margin-top: 2rem;
      transform: translateY(20px);
    }
    :global(.is-scrolled) .hero-cero-container {
      transform: translateY(0);
    }
  }
</style>